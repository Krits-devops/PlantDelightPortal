@model EasyBuy.Models.mdlUserOrderDetail
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card m-3">
                <table id="tblOrderDetail" class="table table-hover">
                    <tbody>
                        <tr>
                            <td colspan="5" class="bg-white">
                                <h3 class="product-name">
                                    <strong>
                                        Order No.: @Model.OrderNo
                                    </strong>
                                </h3>
                            </td>
                        </tr>
                        @foreach (var item in Model.lstProductDetail)
                        {
                            <tr>
                                <td style="width:20%">
                                    <a class="img-responsive">
                                        <img src="@item.ImagePath" style="height:80px;width:80px;">
                                    </a>
                                </td>
                                <td style="width:50%">
                                    <h5>
                                        <strong>
                                            @item.Name
                                        </strong>
                                        <small>
                                            (@item.StkQty)
                                        </small>
                                    </h5>
                                    <h6>
                                        @item.Description
                                    </h6>
                                    @for (var i = 0; i < 5; i++)
                                    {
                                        if (item.Rating > i && @item.Rating < i + 1)
                                        {
                                            <i class="fa fa-star-half text-warning"></i>
                                        }
                                        else if (item.Rating >= i + 1)
                                        {
                                            <i class="fa fa-star text-warning checked"></i>
                                        }
                                    }
                                </td>
                                <td style="width:15%">
                                    <h5>
                                        <strong>
                                            $ @item.Price
                                        </strong>
                                    </h5>
                                </td>
                                <td style="width:15%">
                                    X   @item.Qty
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card m-3">
                <div class="card-body">
                    <h5 class="mb-3">Price Detail</h5>
                    <hr class="mb-3" />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <div class="col-sm-6">
                                Subtotal
                            </div>
                            <div class="col-sm-6">
                                <span id="lblSubTotal">$ @Model.SubTotal</span>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <div class="col-sm-6">
                                Tax Amount(13%)
                            </div>
                            <div class="col-sm-6">
                                <span id="lblTax">$ @Model.TaxAmt</span>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div class="col-sm-6">
                                <strong>Total</strong>
                            </div>
                            <div class="col-sm-6">
                                <strong><span id="lblTotal">$ @Model.TotalAmt</span></strong>
                                <i class="fa fa-long-arrow-alt-left mr-2"></i>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card m-3">
                <div class="card-header">
                    Shipping Address
                </div>
                <div class="card-body ml-3">
                    <div class="row">
                        @Model.objmdlShipping.FirstName &nbsp; @Model.objmdlShipping.LastName &nbsp;(@Model.objmdlShipping.MobileNo)
                    </div>
                    <div class="row">
                        @Model.objmdlShipping.AddressLine1
                    </div>
                    <div class="row">
                        @Model.objmdlShipping.AddressLine2
                    </div>
                    <div class="row">
                        @Model.objmdlShipping.CityName &nbsp; @Model.objmdlShipping.ProvinceName &nbsp; @Model.objmdlShipping.PostalCode
                    </div>
                    <div class="row">
                        @Model.objmdlShipping.CountryName
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>