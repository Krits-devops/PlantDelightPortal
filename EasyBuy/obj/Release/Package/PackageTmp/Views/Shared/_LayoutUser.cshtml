<!DOCTYPE html>
<html>
<head>
    <title>EasyBuy</title>
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/EasyBuy.js"></script>

    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link href="~/Content/submenus.css" rel="stylesheet" />
    <link href="~/Content/Common.css" rel="stylesheet" />
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <link href="~/Content/ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/script.js"></script>

    <style type="text/css">
        i, a {
            color: #ffffff;
        }

            a small.text:hover, i:hover {
                color: #ffc107;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark mb-0" style="background-color:#212529">
            <a href="/Home/UserHome" class="nav-item nav-link">
                <span class="text-white h4">
                    <i class="fa fa-shopping-bag text-warning"></i>
                    EasyBuy<small>.com</small>
                </span>
            </a>
            <div class="collapse navbar-collapse">
                <div class="navbar-nav ml-auto mr-4">
                    <a href="/Home/UserHome" class="nav-item nav-link text-center text-white">
                        <div class="icon-area">
                            <i class="fa fa-home fa-lg"></i>
                        </div>
                        <small class="text">Home</small>
                    </a>
                </div>
                <div class="navbar-nav mr-4">
                    <a href="/Home/UserShoppingCart" class="nav-item nav-link text-center text-white">
                        <div class="icon-area">
                            <i class="fa fa-shopping-cart fa-lg"></i>
                        </div>
                        <small class="text">Cart</small>
                    </a>
                </div>
                <div class="navbar-nav mr-4">
                    <a href="/Home/UserWishlist" class="nav-item nav-link text-center text-white">
                        <div class="icon-area">
                            <i class="fa fa-heart fa-lg"></i>
                        </div>
                        <small class="text">Wish List</small>
                    </a>
                </div>
                <div class="navbar-nav mr-lg-5">
                    <div class="btn-group" role="group">
                        <a class="btn btn-dark dropdown-toggle text-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="icon-area">
                                <img class="rounded-circle bg-white" src="@Session["ProfileImage"]" style="width:25px;height:25px;" />
                                @*<i class="fa fa-user-check fa-lg"></i>*@
                            </div>
                            <small class="text">@Session["UserFirstName"]</small>
                        </a>
                        <div class="dropdown-menu text-white" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item btn-secondary" href="/Home/UserProfile">My Profile</a>
                            <a class="dropdown-item btn-secondary" href="/Home/UserOrder">Orders</a>
                            <a class="dropdown-item btn-secondary" href="/Home/UserWishlist">Wishlist</a>
                            <a class="dropdown-item btn-secondary" href="/Home/UserLogout">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <section class="m-0 p-0">
        @RenderBody()
    </section>
    <div class="clearfix mt-3">
        &nbsp;
    </div>
    <footer class="footer-copyright w-100 p-0 fixed-bottom" style="background-color:#212529">
        <div class="container-fluid p-0">
            <div class="row">
                @*<div class="col-md-9">
                        <ul class="nav mt-2 mb-2">
                            <li class="nav-item"><a class="nav-link">Home</a></li>
                            <li class="nav-item"><a class="nav-link">About</a></li>
                            <li class="nav-item"><a class="nav-link">Contact</a></li>
                        </ul>
                    </div>*@
                <div class="col-md-12 mt-3 mb-2 text-center">
                    <div class="pmd-site-info text-white">
                        <span class="text-muted">&copy; 2020 EasyBuy.com</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>